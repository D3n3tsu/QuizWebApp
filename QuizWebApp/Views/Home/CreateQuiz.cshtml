@model CreateQuizViewModel
@{
    ViewData["Title"] = "Create Quiz";
}

<div>
    <h2>New Quiz</h2>
    <form asp-action="CreateQuiz" asp-antiforgery="true">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" asp-for="Title" placeholder="Title of new quiz" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" asp-for="Description"
                      placeholder="Write down description of new quiz">
            </textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <button type="submit" class="btn btn-lg btn-primary">Create</button>
        <div class="text-info"><small>Add questions on the Home page</small></div>
    </form>
</div>
